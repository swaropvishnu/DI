            height: 50px;
            background-color: #fff;
            border: 1px solid black;
        }

        .form-control2 {
            width: 5%;
            height: 50px;
            background-color: #fff;
            border: 1px solid black;
        }

        .form-control3 {
            width: 4%;
            height: 50px;
            background-color: #fff;
            border: 1px solid black;
        }

        .form-control4 {
            width: 10%;

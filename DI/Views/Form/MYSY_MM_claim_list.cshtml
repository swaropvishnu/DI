    {
        Response.Redirect("../Login/login");
        return;
    }
}
@using System.Data;
@using DI.Models;
@using DI.DAL;
@using DI.BLL;
@{
    //var grid = new WebGrid(Model, rowsPerPage: 20);
    DataTable dt = new DataTable();
    dt = new CommonDA().GetMYSY_Applicant_DIC("B", "", -1,"FMM");
}
<script src="~/Content/tinymce/jquery.tinymce.min.js"></script>

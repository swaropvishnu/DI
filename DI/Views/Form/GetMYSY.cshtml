@model DI.Models.AddMYSY
@{
    ViewBag.Title = "GetMYSY";
    Layout = "~/Views/Shared/_PublicPage.cshtml";
}

@using System.Data;
@using DI.Models;
@using DI.DAL;
@using DI.BLL;

@{
    //var grid = new WebGrid(Model, rowsPerPage: 20);
    AddMYSY Objform = new AddMYSY();

    DataTable dt = new DataTable();
    if (Request["Status"] != null)
    {
       // Objform.applicant_name = "hello";
        dt = new CommonDA().GetMYSY(Objform);
    }
    else
    {
        dt = new CommonDA().GetMYSY(Objform);
    }
}
@using (Html.BeginForm("GetMYSY", "Form", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="portlet box green">
        <div class="portlet-title red">
            <div class="caption">
                <i class="fa fa-globe"></i>मुख्यमंत्री युवा स्वरोजगार का विवरण
            </div>
            <div class="tools"> </div>
        </div>

        <div class="portlet-body">

            <table class="table table-striped table-bordered table-hover" id="Datatable">
                <thead>
                    <tr>
                        <th> क्र० सं० </th>
                        <th> नाम </th>
                        <th> जन्मतिथि</th>
                        <th>पिता का नाम</th>
                        <th>पत्र व्यवहार का पता</th>
                        <th>स्थाई पता</th>
                        <th>जनपद का नाम</th>
                        <th>तहसील  का नाम</th>
                        <th>ब्लॉक  का नाम</th>
                        <th>मोबाइल नं0</th>
                        <th>ई-मेल आई0डी0</th>
                        <th>पेंशन  कार्ड सं0</th>
                        <th>परिवार की वार्षिक आय</th>
                        <th>परियोजना का नाम</th>
                        <th>परियोजना लागत</th>
                        <th>प्लान्ट एवं मशीनरी</th>
                        <th>एक चक कार्यशील पूँजी</th>
                        <th>बैक शाखा</th>
                        <th>बैक शाखा का नाम</th>
                        <th>आईएफएससी कोड</th>
                    </tr>
                </thead>
                <tbody>
                    @if (dt != null)
                {
                    if (dt.Rows.Count > 0)
                    {
                        for (int i = 0; i < dt.Rows.Count; i++)
                        {
                                <tr role="row" class="filter">
                                    <td>@(i + 1)</td>
                                    <td>@dt.Rows[i]["applicant_name"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["dob"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["father_name"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["current_address"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["permanent_address"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["dist_name_u"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["tehsil_name_U"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["block_name_u"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["mobile_no"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["email"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["pansion_card_No"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["family_income"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["project_name"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["project_cost"].ToString().Trim()</td>                                
                                    <td>@dt.Rows[i]["machinery_cost"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["working_capital"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["bank_name"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["branch_name"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["ifsc_code"].ToString().Trim()</td>
                                    
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>

    <script>

    window.onload = L;
    function L() {
        debugger;
        var table = $('#Datatable');

        var oTable = table.dataTable({

            // Internationalisation. For more info refer to http://datatables.net/manual/i18n
            "language": {

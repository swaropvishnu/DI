@model DI.Models.FormModal

@{
    ViewBag.Title = "DistrictIndrustiesInformation";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="portlet box green ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-user"></i><b>जनपद में स्थापित औद्योगिक आस्थानों का विवरण </b>
            </div>
            <div class="tools">
                <a href="" class="collapse" data-original-title="" title=""> </a>
                <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""> </a>
                <a href="" class="reload" data-original-title="" title=""> </a>
                <a href="" class="remove" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body form">
            <form method="post">
                <div class="form-body" style="background-color:#fff8dc">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>जनपद का नाम</b></label>
                                    @if (ViewBag.DisLst != null)
                                    {
                                        @Html.DropDownListFor(m => m.Districtcodecensus, (IEnumerable<SelectListItem>)ViewBag.DisLst, new { @id = "ddlDist", @class = "form-control" })
                                    }
                                </div>


                            </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>औद्योगिक आस्थान का नाम </b></label>
                                @if (ViewBag.DisLst != null)
                                {
                                    @Html.DropDownListFor(m => m.Industrycodecensus, (IEnumerable<SelectListItem>)ViewBag.DisLst, new { @id = "ddlDist", @class = "form-control" })
                                }

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>स्थापना वर्ष</b></label>
                                @Html.TextBoxFor(m => m.Stablishyear, new { @class = "form-control", @id = "txtyear", placeholder = "स्थापना वर्ष" })


                            </div>
                        </div>
                        </div>
                        
                    <div class="row">
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>क्षेत्रफल (वर्ग मीटर में)</b></label>
                                @Html.TextBoxFor(m => m.Area, new { @class = "form-control", @id = "txtarea", placeholder = "क्षेत्रफल (वर्ग मीटर में)" })




                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>वर्तमान प्रचलित दर (वर्ग मीटर)</b></label>

                                @Html.TextBoxFor(m => m.CurrentRate, new { @class = "form-control", @id = "txtapplicationfeedetails", placeholder = "वर्तमान प्रचलित दर (वर्ग मीटर)" })

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>आवंटन हेतु गैर विवादित उपलब्ध रिक्त</b></label>
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "भूखण्ड की संख्या" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>वर्तमान में कुल विकसित</b></label>
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "भूखण्ड की संख्या" })
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "शेडों की संख्या" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>क्षेत्रफलवार विकसित</b></label>
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "भूखण्ड की संख्या" })
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "शेडों की संख्या" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>आवंटित</b></label>
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "भूखण्ड की संख्या" })
                                @Html.TextBoxFor(m => m.FiananceDetails, new { @class = "col-md-2 form-control", @id = "txtFinancedetails", placeholder = "शेडों की संख्या" })
                            </div>
                        </div>

                        

                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                         <b style="font-size:16px">उपलब्ध अवस्थापना सुविधायें </b>
                        </div>

                         
                        
                        </div>
                    <br/>
                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label"><b>अस्थान में पहुँच दूरी (बस स्टैंड से)</b></label>
                                        @Html.TextBoxFor(m => m.Area, new { @class = "form-control", @id = "txtarea", placeholder = "निकट बस स्टैंड से दूरी (किलोर्मीटर में)" })




                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label"><b>अस्थान में पहुँच दूरी (रेलवे स्टेशन से)</b></label>
                                        @Html.TextBoxFor(m => m.Area, new { @class = "form-control", @id = "txtarea", placeholder = "निकट रेलवे स्टेशन से दूरी (किलोर्मीटर में)" })




                                    </div>
                                </div>
                               
                            

                        </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>अस्थान में पहुंच सड़क उपलब्ध है अथवा नहीं </b></label>
                                <div class="radio-list" style="margin-left:20px">
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.PracticalProjectReport, "Yes", new { @name = "Road", @id = "RoadRadiosYes", @value = "Yes" })
                                        @*<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1">*@हाँ
                                    </label>
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.PracticalProjectReport, "No", new { @name = "Road", @id = "RoadRadiosNo", @value = "No", @checked = "" })नहीं
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>बिजली उपलब्ध है अथवा नहीं </b></label>
                                <div class="radio-list" style="margin-left:20px">
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.HelpFromForegin, "Yes", new { @name = "Light", @id = "LightRadiosYes", @value = "Yes" })हाँ
                                    </label>
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.HelpFromForegin, "No", new { @name = "Light", @id = "LightRadiosNo", @value = "No", @checked = "" })नहीं
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label"><b>जल निकासी/नाली सुविधा उपलब्ध है अथवा नहीं </b></label>
                                <div class="radio-list" style="margin-left:20px">
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.HelpFromForegin, "Yes", new { @name = "WaterOutlet", @id = "WaterOutletRadiosYes", @value = "Yes" })हाँ
                                    </label>
                                    <label class="radio-inline">
                                        @Html.RadioButtonFor(m => m.HelpFromForegin, "No", new { @name = "WaterOutlet", @id = "WaterOutletRadiosNo", @value = "No", @checked = "" })नहीं
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label"><b>पेयजल व्यवस्था उपलब्ध है अथवा नहीं</b></label>
                                    <div class="radio-list" style="margin-left:20px">
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.PracticalProjectReport, "Yes", new { @name = "DrinkingWater", @id = "DrinkingWaterRadiosYes", @value = "Yes" })
                                            @*<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1">*@हाँ
                                        </label>
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.PracticalProjectReport, "No", new { @name = "DrinkingWater", @id = "DrinkingWaterRadiosNo", @value = "No", @checked = "" })नहीं
                                        </label>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label"><b>रॉ मैटेरियल साइडिंग उपलब्ध है अथवा नहीं</b></label>
                                    <div class="radio-list" style="margin-left:20px">
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.HelpFromForegin, "Yes", new { @name = "RawMaterial", @id = "RawMaterialYes", @value = "Yes" })हाँ
                                        </label>
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.HelpFromForegin, "No", new { @name = "RawMaterial", @id = "RawMaterialNo", @value = "No", @checked = "" })नहीं
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label"><b>औद्योगिक पार्क उपलब्ध है अथवा नहीं</b></label>
                                    <div class="radio-list" style="margin-left:20px">
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.HelpFromForegin, "Yes", new { @name = "IndrustyPark", @id = "IndrustyParkYes", @value = "Yes" })हाँ
                                        </label>
                                        <label class="radio-inline">
                                            @Html.RadioButtonFor(m => m.HelpFromForegin, "No", new { @name = "IndrustyPark", @id = "IndrustyParkNo", @value = "No", @checked = "" })नहीं
                                        </label>
                                    </div>
                                </div>
                            </div>

                            </div>
                    

               
                <div class="form-actions">
                    <button type="button" class="btn default">Cancel</button>
                    <button type="submit" class="btn red">Submit</button>
                </div>
            </form>
        </div>

    </div>

}


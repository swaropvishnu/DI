            var cell6 = row.insertCell(5);
            cell1.innerHTML = table.rows.length - 1;
            cell2.innerHTML = "<input type='text' id='txtShare" + (table.rows.length - 1) + "' placeholder='Title' name='txtMachine' value='" + Machine + "' maxlength='100' />";
            cell3.innerHTML = "<input type='text' id='txtbank_loan" + (table.rows.length - 1) + "' placeholder='Title' name='txtcost' value='" + cost + "' maxlength='8' />";
            cell4.innerHTML = "<input type='text' id='txtsupplier" + (table.rows.length - 1) + "' placeholder='Title' name='txtsupplier' value='" + Supplier + "' maxlength='100' />";

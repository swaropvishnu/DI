            cell5.innerHTML = "<input type='button' value='Delete' class='btn red' id='btnadd' onclick='del(" + (table.rows.length - 1) + ")'>";

            document.getElementById('txtMachine').value = "";
            document.getElementById('txtcost').value = "";
            document.getElementById('txtsupplier').value = "";
          
        }

        function Add2() {

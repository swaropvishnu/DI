
@{
    ViewBag.Title = "ReportIndustrialEstate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (UserSession.LoggedInUserLevelId == null || UserSession.LoggedInUserLevelId != "6")
    {
        Response.Redirect("../Login/login");
        return;
    }
}

@using System.Data;
@using DI.Models;
@using DI.DAL;
@using DI.BLL;

@{
    //var grid = new WebGrid(Model, rowsPerPage: 20);
    DataTable  dt = new DataTable();
    if (Request["Industry"] !=null)
    {
        dt = new CommonDA().GetIndustrialEstateInfo(-1, "", -1, -1, -1, -1, "", "", "", CommonBL.Setdate("01/01/1990"), DateTime.Now, CommonBL.Setdate("01/01/1990"), DateTime.Now, Request["Industry"].ToString().Trim()== "Large_Scale"?"L":"S");
    }
    else
    {
        dt = new CommonDA().GetIndustrialEstateInfo(-1, "", -1, -1, -1, -1, "", "", "", CommonBL.Setdate("01/01/1990"), DateTime.Now, CommonBL.Setdate("01/01/1990"), DateTime.Now,"");
    }

}
@using (Html.BeginForm("GetIndustrialEstateList", "IndustrialAreaMaster", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="portlet box green">
    <div class="portlet-title red">
       
        <div class="caption">
            <i class="fa fa-globe"></i>  औद्योगिक आस्थानो सूची
        </div>
      
        <div class="tools"> </div>
</div>
   

    <div class="portlet-body">

        <table class="table table-striped table-bordered table-hover" id="Datatable">
            <thead>
                <tr >
                    <th> क्र० सं० </th>
                    <th>औद्योगिक प्रकार</th>
                    <th> आस्थान का नाम </th>
                    <th> स्थापना वर्ष </th>
                    <th>पता </th>
                    <th> जनपद </th>
                    <th> क्षेत्रफल (वर्ग मी०)</th>
                    <th> वर्तमान प्रचलित दर(वर्ग मीटर)</th>
                    <th> निकटतम रेलवे स्टेशन से दूरी </th>
                    <th> पहुँच सड़क उपलब्धता </th>
                    <th> बिजली उपलब्धता</th>
                    <th>जल निकासी उपलब्धता </th>
                    <th>पेयजल उपलब्धता </th>
                    <th>रॉ मटेरियल साइडिंग उपलब्धता </th>
                    <th>औद्योगिक पार्क उपलब्धता </th>
                    
                </tr>
                </thead>
                <tbody>
                    @if (dt != null)
                    {
                        if (dt.Rows.Count > 0)
                        {
                            for (int i = 0; i < dt.Rows.Count; i++)
                            {
                                <tr role="row" class="filter">
                                    <td>@(i + 1)</td>
                                    <td>@dt.Rows[i]["IndustryType"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["IndustrialEstateName"].ToString().Trim()</td>
                                   
                                    <td>@dt.Rows[i]["Establishment1"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["Address"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["DisttName_U"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["AreaPerSqfeet"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["rate_per_sqFeet"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["NearestRailwayStationKm"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["StreetStatus"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["ElectriccityStatus"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["DrainageStatus"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["DrinkingWaterStatus"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["RawMaterialsSidingStatus"].ToString().Trim()</td>
                                    <td>@dt.Rows[i]["IndustrialParkStatus"].ToString().Trim()</td>
                                  
                                </tr>
                            }
                        }
                    }




 </tbody>
        </table>
    </div>

    </div>
